# Google API Configuration
GOOGLE_API_KEY=your_api_key_here

# Gemini Model (gemini-2.5-flash or gemini-2.5-pro)
GEMINI_MODEL=gemini-2.5-flash

# Google Drive OAuth (optional - for Drive sync feature)
# Download from Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_DRIVE_CREDENTIALS=path/to/credentials.json
GOOGLE_DRIVE_TOKEN=token.json

# Database Configuration
DATABASE_URL=sqlite:///app.db

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
